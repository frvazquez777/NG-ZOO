h1 
    text-align center 
    color red 

p   
    color blue 

ul 
    background red 
    color white 

.boton_transicion
    padding 10px
    background red 
    color white 
    border-radius 4px
    border 4px solid blue  
    transition border 2s, border-radius 500ms, background 5s
    display block 
    width 100px
    &:hover
        text-decoration none 
        color blue 
        cursor pointer
        border-radius 4px 
        background #ccc 
        border 1px solid red 

.caja_animada 
    margin-top 15px
    background green 
    border 5px solid black
    width 200px 
    height 200px
    /*
    animation-name rotacion 
    animation-duration 10s 
    animation-iteration-count infinite
    */

@keyframes rotacion 
    from {
        margin-left 0px
        transform rotate(0deg)
    }
    to {
        margin-left 600px
        transform rotate(360deg)
    }

@keyframes deslizamiento 
    0% {
        margin-left 0px
    }
    25% {
        margin-left 200px
        background red 
    }
    50% {
        margin-left 400px
        background orange 
        border-radius 1000px
    }
    75% {
        margin-left 200px
        background yellow 
        border-radius 0px
    }
    100% {
        margin-left 0px
        background green 
    }

